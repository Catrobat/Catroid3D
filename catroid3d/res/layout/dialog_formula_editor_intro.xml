<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <org.catrobat.catroid.utils.BorderTextView
        android:id="@+id/intro_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/formula_editor_intro_heading_color"
        android:textSize="@dimen/text_size_large" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:scrollbars="vertical">

        <org.catrobat.catroid.utils.BorderTextView
            android:id="@+id/intro_dialog_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/solid_white"
            android:textSize="@dimen/text_size_medium" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/intro_dialog_skip_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:text="@string/skip"
            android:textColor="@color/solid_white"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/intro_dialog_next_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:text="@string/next"
            android:textColor="@color/solid_white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
</LinearLayout>